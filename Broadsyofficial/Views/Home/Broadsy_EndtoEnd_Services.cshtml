<div class="s-technologies-tabs__header">
    <h2 class="s-technologies-tabs__title" style="font-size: clamp(18px, 3.5vw, 25px); line-height: 1.4; margin-bottom: 15px; text-align: center; padding: 0 10px; word-wrap: break-word;">Empower Your Team with Modern and Efficient Technologies</h2>
</div>

<div class="s-technologies-tabs__nav">
    <div class="s-technologies-tabs__nav-item fontstyle active" data-id="frontend">
        <span class="s-technologies-tabs__nav-title">Frontend</span>
        <div class="s-technologies-tabs__nav-icon">
            <i class="fas fa-chevron-down"></i>
        </div>
    </div>
    <div class="s-technologies-tabs__nav-item fontstyle" data-id="backend">
        <span class="s-technologies-tabs__nav-title">Backend</span>
        <div class="s-technologies-tabs__nav-icon">
            <i class="fas fa-chevron-down"></i>
        </div>
    </div>
    <!-- Add more language tabs as needed -->
</div>

<div class="s-technologies-tabs__content">
    <div class="s-technologies-tabs__panel active" data-id="frontend">
        <div class="tech-content">
            <!-- Frontend content -->
        </div>
        <div class="tech-icon" style="display: none;">
            <i class="fab fa-html5"></i>
            <i class="fab fa-css3-alt"></i>
            <i class="fab fa-js"></i>
            <i class="fab fa-react"></i>
            <i class="fab fa-angular"></i>
        </div>
    </div>
    <div class="s-technologies-tabs__panel" data-id="backend">
        <div class="tech-content">
            <!-- Backend content -->
        </div>
        <div class="tech-icon" style="display: none;">
            <i class="fab fa-node-js"></i>
            <i class="fab fa-python"></i>
            <i class="fab fa-java"></i>
            <i class="fab fa-php"></i>
        </div>
    </div>
    <!-- Add more panels as needed -->
</div>

<style>
    @media (max-width: 768px) {
        .s-technologies-tabs__title {
            font-size: clamp(16px, 3vw, 20px) !important;
            padding: 0 15px !important;
        }
        
        .s-technologies-tabs__nav {
            flex-direction: column;
            gap: 10px;
        }
        
        .s-technologies-tabs__nav-item {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        
        .tech-icon {
            display: flex !important;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
            padding: 15px;
            background: rgba(74, 0, 225, 0.1);
            border-radius: 8px;
        }
        
        .tech-icon i {
            font-size: 24px;
            color: #4a00e1;
            transition: transform 0.3s ease;
        }
        
        .tech-icon i:hover {
            transform: scale(1.2);
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const navItems = document.querySelectorAll('.s-technologies-tabs__nav-item');
        const panels = document.querySelectorAll('.s-technologies-tabs__panel');
        
        navItems.forEach(item => {
            item.addEventListener('click', function() {
                // Remove active class from all items
                navItems.forEach(nav => nav.classList.remove('active'));
                panels.forEach(panel => panel.classList.remove('active'));
                
                // Add active class to clicked item
                this.classList.add('active');
                
                // Show corresponding panel
                const panelId = this.getAttribute('data-id');
                const activePanel = document.querySelector(`.s-technologies-tabs__panel[data-id="${panelId}"]`);
                if (activePanel) {
                    activePanel.classList.add('active');
                    // Show icons for the active panel
                    const icons = activePanel.querySelector('.tech-icon');
                    if (icons) {
                        icons.style.display = 'flex';
                    }
                }
            });
        });
    });
</script> 